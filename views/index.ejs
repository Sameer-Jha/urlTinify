<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>URL Tinyfy</title>
</head>
<body>
    <div class="container">
    <h1 class="my-4" style="text-align: center;">URL Tinyfy</h1>
    <form action="/tinify" method="post" class="my-4 form-inline">
        <label class="sr-only" for="fullURL">URL</label>
        <input type="url" placeholder="URL" name='fullURL' id="fullURL" class="form-control col mr-2" required>
        <button type="submit" class="btn btn-danger">Tinify</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Tinified URL</th>
                <th>Visits</th>
            </tr>
        </thead>
        <tbody>

            <% shortURLs.forEach(shortUrl => { %>
                
                <tr>
                    <td><a href="<%= shortUrl.fullURL%>">
                    <%= shortUrl.fullURL %></a></td>
                    <td><a href="<%= shortUrl.shortURL %>">
                    <%= shortUrl.shortURL %></a></td>
                    <td><%= shortUrl.clicks %></td>
                </tr>
                
            <% }) %>

        </tbody>
    </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>